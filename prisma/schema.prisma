generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum PROCESSING_STATUS {
  PENDING
  PROCESSING
  FAILED
  SUCCESS
}

model Events {
  id          String            @id @unique @default(cuid())
  eventId     String
  description String?
  FailedCount Int
  status      PROCESSING_STATUS

  @@index([eventId])
}

model Payments {
  id             String   @id @default(cuid())
  paymentId      String
  recievedAmount Int
  name           String?
  email          String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}
